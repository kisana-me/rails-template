<%= form_with(model: document, class: "ctmf", data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: document %>

  <div>
    <%= form.label :name_id %>
    <%= form.text_field :name_id %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :summary %>
    <%= form.textarea :summary %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.textarea :content %>
  </div>

  <div>
    <%= form.label :published_at %>
    <%= form.datetime_field :published_at %>
  </div>

  <div>
    <%= form.label :edited_at %>
    <%= form.datetime_field :edited_at %>
  </div>

  <div>
    <%= form.label :visibility, style: "display: block" %>
    <%= form.select :visibility, Document.visibilities.keys.map { |k| [t("activerecord.enums.document.visibility.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Document.statuses.keys.map { |k| [t("activerecord.enums.document.status.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
